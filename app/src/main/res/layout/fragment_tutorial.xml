<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tutorial Rápido"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Clique em 'Começar' para abrir o simulador.
2. Escolha o tipo de operação com matrizes (soma, multiplicação, determinante etc).
3. Insira os valores nas matrizes.
4. Clique em 'Calcular' para ver o resultado.
5. Explore diferentes exemplos para praticar!"
            android:textSize="16sp"/>
    </LinearLayout>
</ScrollView>
